{
	"name": "porky-cli",
	"description": "This is a scaffold",
	"author": "Porky Kay",
	"license": "MIT",
	"private": true,
	"homepage": "https://github.com/porky-prince/porky-cli#readme",
	"repository": "https://github.com/porky-prince/porky-cli",
	"bugs": "https://github.com/porky-prince/porky-cli/issues",
	"workspaces": [
		"./packages/*"
	],
	"scripts": {
		"commitlint": "commitlint --from=master",
		"lint:prettier": "prettier \"{**/*,*}.{js,json,md}\" -l",
		"lint:js": "eslint --cache .",
		"lint": "npm-run-all -l -p \"lint:**\"",
		"pretest": "npm run lint",
		"test:dvs": "lerna run test --scope=dependency-version-sync",
		"test:generators": "lerna run test --scope=@porky-prince/generator-generators",
		"test:rooter": "lerna run test --scope=module-rooter",
		"test:cli": "lerna run test --scope=porky-cli",
		"test:config": "lerna run test --scope=porky-config",
		"test:helper": "lerna run test --scope=porky-helper",
		"test:runtime": "lerna run test --scope=generator-porky-runtime",
		"test:log": "lerna run test -- --verbose=true",
		"test": "lerna run test",
		"debug": "node --inspect-brk src/main.js",
		"bootstrap": "lerna bootstrap",
		"clean": "lerna clean",
		"link": "lerna link",
		"version": "lerna version",
		"publish": "lerna publish from-package"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"del": "^5.1.0",
		"del-cli": "^3.0.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-config-xo": "^0.29.1",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"lerna": "^3.20.2",
		"lint-staged": "^10.0.7",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"semver": "^7.3.2",
		"yeoman-assert": "^3.1.1",
		"yeoman-generator": "^4.5.0",
		"yeoman-test": "^2.1.0"
	}
}
